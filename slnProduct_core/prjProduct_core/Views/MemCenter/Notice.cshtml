@model IEnumerable<prjProduct_core.ViewModel.CNotificationViewModel>

@{
    ViewData["Title"] = "Notice";
}
@section Style{
    <style>
        #container {
            margin: auto auto;
            width: 30rem;
        }

        #allread {
            cursor: pointer;
            margin-right: 0;
            padding-right: 0;
            right: 0;
            display: inline;
            text-align: right;
        }

        .notiul {
            margin: auto auto;
            width: 30rem;
            align-content: center;
            text-align: center;
        }

        .notili {
            display: flex;
            align-items: center;
            margin-bottom: 1px;
        }

            .notili:hover {
                background-color: #F2F4F5;
            }

        .notiData {
            margin: 0 0.9rem;
            margin-top: 0.8rem;
            width: 25rem; /*訊息的寬度*/
        }

            .notiData .notiTitle {
                color: black;
                font-weight: 600;
                font-size: 1rem;
            }

            .notiData .subTitle {
                font-weight: 400;
                font-size: 0.8rem;
            }

            .notiData .notiTime {
                font-size: 0.6rem;
                margin-top: 2px;
            }

        .trash, .readed {
            cursor: pointer;
            border: none;
            background-color: transparent;
        }
    </style>
}
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(../img/Home-img/02.jpg);">
        <h2>通知</h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#"><i class="fa fa-home"></i> Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">通知</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container" id="container">
    <div><p id="allread">全部標為已讀</p></div>
    <ul class="notiul">
        @{
            foreach (var item in Model)
            {
                <li class="notili r_@item.HasRead ">
                    <div class="notiData">
                        <div class="notiTitle">訂單 @item.TradeNo</div>
                        <div class="subTitle">此訂單目前的狀態：@item.statement</div>
                        <p class="notiTime">@item.NotifyTime</p>
                    </div>
                    <div class="notiDel">
                        <button class="trash"><i class="fa-solid fa-trash-can"><span hidden>@item.NotificationId</span></i></button>
                        <button class="readed">標為已讀<span hidden>@item.NotificationId</span></button>
                    </div>
                </li>
            }
        }

    </ul>
</div>


@section Scripts{
    <script>
    //===========已讀未讀=============================
        $(document).ready(function () {
            $(".r_False").css("background-color", "rgba(115,191,0,0.1)");
            $(".r_True").css("background-color", "transparent");
        });
    //==========標為已讀====================
        //全標
        $("#allread").click(() => {
            $.get('@Url.Content("~/MemberFactory/ReadOneNoti")', function (data) {
                if (data == "OK") {
                    $(".r_False").css("background-color", "transparent");
                    $("#readDot").attr("hidden","hidden");
                } else {
                    window.location.href = '@Url.Content("~/MemberFactory/ReadOneNoti")';
                }
            })
        })
        //單個標
        $(".readed").click(function (e) {
            let notiid = e.currentTarget.textContent.substr(4);
            let li = $(this).closest(".notili");
            $.post('@Url.Content("~/MemberFactory/ReadOneNoti")', { "id": notiid },
                function (data) {
                    if (data == "OK") {
                        li.css("background-color", "transparent");
                    } else if (data == "AllRead") {
                        li.css("background-color", "transparent");
                        $("#readDot").attr("hidden", "hidden");
                    }
                    else {
                        window.location.href = '@Url.Content("~/MemberFactory/ReadOneNoti")';
                    }
                });
        })
    //===========刪除訊息=============================
        $(".trash").click(function (e) {
            let notiid = e.currentTarget.textContent;
            let li = $(this).closest(".notili");
             $.post('@Url.Content("~/MemberFactory/DeletNotice")', { "id": notiid },
                function (data) {
                    if (data == "OK") {
                        li.remove();
                    } else {
                        window.location.href = `@Url.Content("~/MemberFactory/DeletNotice")`;
                    }
                })
        });
    //=============多少時間前的通知=====================
    let notiTime = $(".notiTime");
    let timearr = [];
    $.each(notiTime, function (index, value) {
        timearr.push(value.innerText);
    });
    function Ago() {
        let nowTime = new Date().getTime();
        for (let i = 0; i < timearr.length; i++) {
            let NotifyTime = new Date(timearr[i]).getTime();
            let period = nowTime - NotifyTime;
            let days = Math.floor(period / (24 * 60 * 60 * 1000));
            if (days >= 1) {//超過一天
                notiTime.get(i).innerText = `${days}天前`;
            } else {//一天之內
                let hours = Math.floor((period % (24 * 60 * 60 * 1000)) / (1000 * 60 * 60));
                if (hours >= 1) {
                    notiTime.get(i).innerText = `${hours}小時前`;
                } else {//一小時內
                    let minutes = Math.floor((period % (60 * 60 * 1000)) / (1000 * 60));
                    if (minutes >= 1) {
                        notiTime.get(i).innerText = `${minutes}分鐘前`;
                    } else {//一分鐘內
                        notiTime.get(i).innerText = `幾秒鐘前`;
                    }
                }

            }
        }
    }
    Ago();
    $(document).ready(() => {
        let timer = setInterval(Ago, 1000);
    });
    </script>
}