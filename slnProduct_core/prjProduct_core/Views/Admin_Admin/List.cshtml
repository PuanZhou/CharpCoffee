@model IEnumerable<prjProduct_core.Models.Admin>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>管理員名單</h1>

<p>
    <a asp-action="Create">新增管理員</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                密碼
            </th>
            <th>
                產品管理權限
            </th>
            <th>
                訂單管理權限
            </th>
            <th>
                會員管理權限
            </th>
            <th>
                文章管理權限
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;

            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        **********
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductOk)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderOk)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberOk)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArticleOk)
                    </td>
                    <td>
                        @Html.ActionLink("編輯", "Edit", "Admin_Admin", new { id = item.AdminId }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@section Scripts{
    <script>
        let admin = document.querySelector("#admin")

        admin.classList.add("active")

    </script>
}