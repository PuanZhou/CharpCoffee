        infowindow[e] = new google.maps.InfoWindow({
            content: contentString,
            position: {
                lat: position[e].lat,
                lng: position[e].lng
            }
        });

        markers[e].addListener('click', function () {
            if (prev_infowindow) {
                prev_infowindow.close();
            }
            prev_infowindow = infowindow[e];
            infowindow[e].open(map, markers[e]);
        });

    }

</script>
