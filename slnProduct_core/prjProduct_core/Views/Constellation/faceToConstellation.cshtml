<!-- ##### Blog Area Start ##### -->
<section class="alazea-blog-area mb-100">
    <div class="container">
        <div class="row">

            @{
                foreach (var item in Model)
                {
                    <div class="col-12 col-lg-1"></div>
                    <div class="col-12 col-lg-10">
                        <div class="single-blog-post mb-50">
                            <div class="post-content">
                                <div id="ConId+@item.ConstellationId">
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                </div>
                                <h4 style="color:white">
                                    <input type="hidden" name="ArticleId" />
                                    @item.ConstellationName
                                </h4>
                                <h5 style="color:white">
                                    @item.ConstellationDate
                                </h5>
                                <p style="color:white" class="post-excerpt">@Html.Raw(item.ConstellationDescription.Replace(" ", "</p><p style='color: white'>&emsp;&emsp;").Replace("@@@@",item.productName))</p>@*資料庫修正*@
                                <div style="text-align:right">
                                <a href="@Url.Action($"detail", "Shop",new { id = item.ConstellationProductId})"><label style="color:white">GoTo咖啡豆</label></a>@*修正action連結咖啡細節*@
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-1"></div>
                }
            }


        </div>
    </div>
</section>


