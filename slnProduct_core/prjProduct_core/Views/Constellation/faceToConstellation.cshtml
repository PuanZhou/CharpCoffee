<script>
    $(".img1").mouseenter(enter);
    $(".img1").mouseleave(leave);
    function enter() {
        $(event.target).addClass("img10");
    }
    function leave() {
        $(event.target).removeClass("img10");
    }
    $("body").addClass("body1")
</script>
}
