        };
    //=======================================頁面分頁

    // 每個頁面要顯示幾個項目
    var perPage = 9;
    // 總共有多少個項目
    var numItems = $(".list-item").length;

    $(".list-item").slice(perPage).hide();

    $('.pagination').pagination({

        items: numItems,
        itemsOnPage: perPage,
        prevText: "&laquo;",
        nextText: "&raquo;",
        onPageClick: function (pageNumber) {
            // 計算出 起始 以及結束
            var from = perPage * (pageNumber - 1);
            var to = from + perPage;
            $(".list-item").hide().slice(from, to).show();

        }

    })
</script>

  
