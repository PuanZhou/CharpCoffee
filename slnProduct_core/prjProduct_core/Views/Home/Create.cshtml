<form id="creatform" name="creatform" method="post">
    <div class="checkout_area mb-100">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-12 col-lg-7">
                    <div class="checkout_details_area clearfix">
                        <h5>註冊資料</h5>
                        <div class="row">
                            <div class="col-12 mb-4">
                                <label for="name">姓名*</label>
                                <input type="text" class="form-control" maxlength="50" id="name" name="MemberName">
                                <span asp-validation-for="MemberName" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="email_address">電子信箱*</label>
                                <input type="email" class="form-control" id="email" name="MemberEmail">
                                <span asp-validation-for="MemberEmail" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="phone">手機號碼*</label>
                                <input type="text" class="form-control" maxlength="10" id="phone" name="MemberPhone" placeholder="手機號碼為10字元" pattern="[0]{1}[9]{1}[0-9]{8}" />
                                <span asp-validation-for="MemberPhone" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="PW">密碼*</label>
                                <input type="password" class="form-control" maxlength="50" id="PW" name="MemberPassword" placeholder="密碼需含大小寫英數字元，且長度不得小於八" pattern="[0-9a-zA-Z]{8,50}" />
                                <span asp-validation-for="MemberPassword" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="checkPW">確認密碼*</label>
                                <input type="password" class="form-control" maxlength="50" id="checkPW" name="checkPW">
                                <span asp-validation-for="checkPW" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="address">地址*</label>
                                <input type="text" class="form-control" maxlength="50" id="address" name="MemberAddress">
                                <span asp-validation-for="MemberAddress" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <label for="birth">生日*</label>
                                <input type="date" class="form-control" id="birth" name="MemberBirthDay">
                                <span asp-validation-for="MemberBirthDay" class="text-danger"></span>
                                <input hidden type="text" name="ShoppingCarId" value="@ViewBag.CARTID">
                                <input hidden type="text" name="BlackList" value="false"><br />
                                <div class="custom-control custom-checkbox d-flex align-items-center mb-2">
                                    <input type="checkbox" class="custom-control-input" id="news" name="Newspaper">
                                    <label class="custom-control-label" for="news">是否訂閱電子報？</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-4">
                    <div class="checkout-content ">
                        <h5 class="title--">
                            <i>注意事項</i>
                        </h5>
                        <div class="subtotal d-flex justify-content-between align-items-center">
                            <h5 class="warn" id="warnName">姓名</h5>
                        </div>
                        <div class="subtotal d-flex justify-content-between align-items-center">
                            <h5 class="warn" id="warnEmail">電子信箱</h5>
                        </div>
                        <div class="subtotal d-flex justify-content-between align-items-center">
                            <h5 class="warn" id="warnPhone">手機號碼</h5>
                        </div>
                        <div class="subtotal d-flex justify-content-between align-items-center">
                            <h5 class="warn" id="warnPW">密碼</h5>
                        </div>
                        <div class="subtotal d-flex justify-content-between align-items-center">
                            <h5 class="warn" id="warnCheckPW">再次確認密碼</h5>
                        </div>
                        <div class="subtotal d-flex justify-content-between align-items-center">
                            <h5 class="warn" id="warnAddress">地址</h5>
                        </div>
                        <div class="subtotal d-flex justify-content-between align-items-center">
                            <h5 class="warn" id="warnBirth">生日格式</h5>
                        </div>
                        <div class="checkout-btn mt-30">
                            <button type="submit" class="btn alazea-btn w-100" id="btncreat">註冊</button><br />
                            <input type="button" class="btn btn-primary" id="creatDemo" value="註冊Demo">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- ##### Checkout Area End ##### -->
