@inject CoffeeContext pd
@model IEnumerable<prjCSCoffee.Models.CShoppingCartItem>

@{
    ViewData["Title"] = "ShoppingCarEmpty";
}

@section Style
{
    <style>
        .size span {
            font-size: 20px;
        }

        .alert p {
            margin: 0;
            font-size: 20px;
            line-height: 50px;
            text-align: center;
        }

        .alert img {
            padding-bottom: 8px;
            padding-right: 8px;
        }

        .empty {
            width: 800px;
            margin: 0 auto;
            text-align: center;
        }
    </style>
}

<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(../img/Home-img/02.jpg);">
        <h2>購物車</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Cart</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Cart Area Start ##### -->
<div class="cart-area section-padding-0-100 clearfix">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="empty">
                    <img src="~/img/Icon/empty-cart.png" />
                    <h3>目前購物車內尚無商品，快去加入購物車吧!</h3><br />
                    @Html.ActionLink("前往商城", "view", "Shop", null, new { @class = "btn alazea-btn w-50", style = "border-radius:10px;" })
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Cart Area End ##### -->
<!-- ##### Footer Area Start ##### -->
