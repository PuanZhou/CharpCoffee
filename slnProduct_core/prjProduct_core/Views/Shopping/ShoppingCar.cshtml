                    </div>
                    <div class="checkout-btn">
                        @Html.ActionLink("前往結帳", "Car2", "Shopping", null, new { @class = "btn alazea-btn w-100", style = "border-radius:10px;" })
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
