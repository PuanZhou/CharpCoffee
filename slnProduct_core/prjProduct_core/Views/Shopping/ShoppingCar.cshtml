                                </th>
                                <th class="col-md-1" style="text-align:center">
                                    @Html.DisplayNameFor(model => model.price)
                                </th>
                                <th class="col-md-1.8" style="text-align:center">
                                    @Html.DisplayNameFor(model => model.小計)
                                </th>
                                <th class="col-md-2" style="text-align:center">
